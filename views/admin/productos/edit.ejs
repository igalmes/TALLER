
<h1>Editar producto</h1>

<div class="row justify-content-center">
<div class="col-6">
    <form action="/admin/producto/update?_method=PUT" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= producto.id %>">
        <div>
            <label for="nombre" class="form-label">Nombre: </label>
            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= producto.nombre %>">
        </div>
        <div>
            <div>
                <label for="nombre" class="form-label">Imagen: </label>
                <input type="file" class="form-control" id="nombre" name="imagenes[]">
                <img width="100" src="/uploads/producto_<%= producto.id %>.jpg" alt="<%= producto.nombre %>">
            </div>           
            <label for="categoria" class="form-label">Categoria: </label>
            <select name="categoria" class="form-control" id="categoria">
                <option value="1" <%= producto.categoria_id == 1 ? 'selected' : '' %>>Categoria 1</option>
                <option value="2"  <%= producto.categoria_id == 2 ? 'selected' : '' %>>Categoria 2</option>
                <option value="3" <%= producto.categoria_id == 3 ? 'selected' : '' %>>Categoria 3</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    </form>
</div>
</div>